@import "../single-vedio/vedio-tpl.wxss";

.vedio-list-container {
    background-color: #fff;
    display: flex;
    flex-direction: column;
}

.inner-container {
    margin: 0  auto 20rpx;
}

.vedio-head {
    padding: 30rpx 20rpx 22rpx;
}

.slogan {
    font-size: 24rpx;
}

.more {
    float: right;
}

.more-text {
    font-size: 26rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    color: #4A6141;
}

.more-img {
    width: 9rpx;
    height: 16rpx;
    vertical-align: middle;
}

.vedios-container {
    display: flex;
    flex-direction: row;
}